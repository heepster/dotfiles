{
  "editor.tabSize": 2,
  "editor.lineHeight": 22,
  "workbench.colorCustomizations": {
    "[DuoTone Dark Sky]": {
      "activityBar.background": "#221f3b",
      "statusBar.background": "#2f2b4f",
      "sideBar.background": "#34314d",
      "tab.inactiveBackground": "#34314d",
      "titleBar.activeBackground": "#34314d"
    },
    "[DuoTone Dark Sea]": {
      "activityBar.background": "#1E2D43",
      "statusBar.background": "#1E2D43",
      "sideBar.background": "#1E2D43",
      "tab.inactiveBackground": "#1E2D43",
      "titleBar.activeBackground": "#1E2D43"
    }
  },
  "terminal.integrated.lineHeight": 1.3,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "files.trimTrailingWhitespace": true,
  "explorer.confirmDelete": false,
  "terminal.integrated.defaultProfile.linux": "/usr/bin/zsh",
  "terminal.integrated.scrollback": 100000,
  "files.watcherExclude": {
    "**/.bloop": true,
    "**/.metals": true,
    "**/.ammonite": true
  },
  "terminal.integrated.macOptionIsMeta": true,
  "terminal.integrated.tabs.enabled": true,
  "terminal.integrated.macOptionClickForcesSelection": true,
  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },
  "explorer.confirmDragAndDrop": false,
  "settingsSync.keybindingsPerPlatform": false,
  "[rust]": {
    "editor.guides.highlightActiveIndentation": true,
    "editor.guides.indentation": true,
    "editor.detectIndentation": false,
    "editor.tabSize": 4
  },
  "security.workspace.trust.untrustedFiles": "open",
  "editor.fontSize": 13,
  "debug.console.fontSize": 13,
  "markdown.preview.fontSize": 13,
  "terminal.integrated.fontSize": 13,
  "vim": {
    "normalModeKeyBindingsNonRecursive": [
      // Remap PageDown
      {
        "before": ["<C-j>"],
        "after": ["<C-d>"]
      },

      // Remap PageUp
      {
        "before": ["<C-k>"],
        "after": ["<C-u>"]
      },

      // Remap Cursor Begin Line
      {
        "before": ["<C-h>"],
        "after": ["^"]
      },

      // Remap Cursor End Line
      {
        "before": ["<C-l>"],
        "after": ["$"]
      },
    ],
    "insertModeKeyBindings": [
      // Remap Escape
      {
        "before": ["<C-;>"],
        "after": ["<ESC>"]
      }
    ],
    "visualModeKeyBindingsNonRecursive": [
      // Remap PageDown
      {
        "before": ["<C-j>"],
        "after": ["<C-d>"]
      },

      // Remap PageUp
      {
        "before": ["<C-k>"],
        "after": ["<C-u>"]
      },

      // Remap Cursor Begin Line
      {
        "before": ["<C-h>"],
        "after": ["^"]
      },

      // Remap Cursor End Line
      {
        "before": ["<C-l>"],
        "after": ["$"]
      },

      // Remap Escape
      {
        "before": ["<C-;>"],
        "after": ["<ESC>"]
      }
    ]
  },
  "go.toolsManagement.autoUpdate": true,
  "git.openRepositoryInParentFolders": "never",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "window.zoomLevel": 3,
  "editor.codeActionsOnSave": {

  },
  "workbench.colorTheme": "Default Dark Modern",
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
}
